{
  "name": "wp-news-scheduler",
  "version": "1.0.0",
  "description": "Automated happy news publisher for WordPress - posts 3 uplifting articles daily",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && cp -r src/admin/public dist/admin/",
    "publish": "node dist/publisher/index.js",
    "admin": "node dist/admin/index.js",
    "dev:publisher": "tsx src/publisher/index.ts",
    "dev:admin": "tsx src/admin/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "fast-xml-parser": "^4.3.2",
    "yaml": "^2.3.4",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "sanitize-html": "^2.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/sanitize-html": "^2.9.5",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  }
}
